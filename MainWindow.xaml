<Window x:Class="EssayPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EssayPlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="Login" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,154,0,0" Click="Button_Click"/>
        <TextBox x:Name="Username" HorizontalAlignment="Center" Margin="0,98,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="Password" HorizontalAlignment="Center" Margin="0,127,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120"/>


    </Grid>
</Window>
